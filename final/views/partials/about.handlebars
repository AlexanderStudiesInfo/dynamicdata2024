<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} | {{siteName}}</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <header>
        <h1>{{siteName}}</h1>
        <p>{{tagline}}</p>
    </header>

    <main>
        <section id="product">
            <h2>{{title}}</h2>
            <div class="product-details">
                <p><strong>Description:</strong> {{welcomeMessage}}</p>
                <p><strong>Mission:</strong> {{mission}}</p>
                <p><strong>History:</strong> {{history}}</p>
            </div>

            <section id="team">
                <h3>Meet Our Team</h3>
                <ul>
                    {{#each team}}
                    <li>
                        <h4>{{name}} - {{title}}</h4>
                        <p>{{bio}}</p>
                    </li>
                    {{/each}}
                </ul>
            </section>

            <section id="values">
                <h3>Our Values</h3>
                <ul>
                    {{#each values}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </section>

            <section id="contact">
                <h3>Contact Us</h3>
                <p><strong>Email:</strong> <a href="mailto:{{contact.email}}">{{contact.email}}</a></p>
                <p><strong>Phone:</strong> {{contact.phone}}</p>
                <p><strong>Address:</strong> {{contact.address}}</p>
            </section>

            <section id="social-media">
                <h3>Follow Us</h3>
                <p><a href="{{socialMedia.instagram}}" target="_blank">Instagram</a></p>
                <p><a href="{{socialMedia.twitter}}" target="_blank">Twitter</a></p>
            </section>
        </section>
    </main>

    <footer>
        <p>&copy; {{year}} {{siteName}}. All rights reserved.</p>
    </footer>
</body>
</html>
